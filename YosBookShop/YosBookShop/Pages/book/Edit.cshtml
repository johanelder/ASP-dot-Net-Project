@page
@model YosBookShop.Pages.book.EditModel
@{
}

<form method="post">
    <input hidden asp-for="@Model.Book.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Book</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="@Model.Book.Title" class="form-control">Type</label>
            <input asp-for="@Model.Book.Title" class="form-control"/>
            <span asp-validation-for="@Model.Book.Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Book.Author" class="form-control">Type</label>
            <input asp-for="@Model.Book.Author" class="form-control"/>
            <span asp-validation-for="@Model.Book.Author" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Book.PageCount" class="form-control">Type</label>
            <input asp-for="@Model.Book.PageCount" class="form-control"/>
            <span asp-validation-for="@Model.Book.PageCount" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px">Update</button>
        <a asp-page="Index" class="btn btn-secondary" style="width: 120px">Back to List</a>
    </div>
</form>

            
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}