@page
@model YosBookShop.Pages.book.IndexModel
@{
}

<partial name="_Notifications" />
<div class="container p-3">
    <div class="col-6">
        Book List
    </div>
    <div class="col-6 text-end">
        <a asp-page="create" class="btn btn-primary" style="width: 225px">
            <i class="bi bi-plus-circle">  Add a New Book</i>
        </a>
        
    </div>
</div>

<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Pages</th>
        <th>Type</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var obj in Model.Books)
    {
        <tr>
            <td width="20%">@obj.Title</td>
            <td width="20%">@obj.Author</td>
            <td width="20%">@obj.PageCount</td>
            <td width="20%">@obj.BookType</td>
            <td width="20%">
                <div class="w-25 btn-group" role="group">
                    <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil"></i></a>
                    <a asp-page="Delete" asp-route-id="@obj.Id"class="btn btn-danger mx-2"><i class="bi bi-trash"></i></a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>
