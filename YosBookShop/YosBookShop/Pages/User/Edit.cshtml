@page
@model YosBookShop.Pages.User.EditModel
@{
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit User</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="@Model.User.Name" class="form-control">Name</label>
            <input asp-for="@Model.User.Name" class="form-control"/>
            <span asp-validation-for="@Model.User.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.User.UserName" class="form-control">Username</label>
            <input asp-for="@Model.User.UserName" class="form-control"/>
            <span asp-validation-for="@Model.User.UserName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.User.Email" class="form-control">Email</label>
            <input asp-for="@Model.User.Email" class="form-control"/>
            <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.User.Role" class="form-control">Role</label>
            <input asp-for="@Model.User.Role" class="form-control"/>
            <span asp-validation-for="@Model.User.Role" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.User.CreatedOn" class="form-control">Created</label>
            <input asp-for="@Model.User.CreatedOn" class="form-control"/>
            <span asp-validation-for="@Model.User.CreatedOn" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-page="Index" class="btn btn-secondary" style="width: 120px">Back to List</a>
    </div>
</form>
            
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}