@page
@model YosBookShop.Pages.User.IndexModel
@{
}

<partial name="_Notifications" />
<div class="container p-3">
    <div class="col-6">
        Book List
    </div>
    <div class="col-6 text-end">
        <a asp-page="create" class="btn btn-primary" style="width: 225px">
            <i class="bi bi-plus-circle">  Add a New User</i>
        </a>
        
    </div>
</div>

<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
    <tr>
        <th>Name</th>
        <th>Username</th>
        <th>Email</th>
        <th>Role</th>
        <th>Created</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var obj in Model.User)
    {
        <tr>
            <td width="15%">@obj.Name</td>
            <td width="15%">@obj.UserName</td>
            <td width="15%">@obj.Email</td>
            <td width="15%">@obj.Role</td>
            <td width="15%">@obj.CreatedOn</td>
            <td width="15%">
                <div class="w-25 btn-group" role="group">
                    <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil"></i></a>
                    <a asp-page="Delete" asp-route-id="@obj.Id"class="btn btn-danger mx-2"><i class="bi bi-trash"></i></a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>