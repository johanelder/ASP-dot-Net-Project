@page
@model YosBookShop.Pages.bikeType.IndexModel
@{
    @if(TempData["success"] != null)
    {
        <script src="/lib/jquery/dist/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
        <script type="text/javascript">toastr.success('@TempData["success"]')</script>
    }
    @if(TempData["delete"] != null)
    {
        <script src="/lib/jquery/dist/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
        <script type="text/javascript">toastr.success('Deleted!')</script>
    }
    @if(TempData["updated"] != null)
    {
        <script src="/lib/jquery/dist/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
        <script type="text/javascript">toastr.success('Updated successfully!')</script>
    }
}
@*<partial name="_Notifications" />*@
<div class="container p-3">
    <div class="col-6">
        Book Type List
    </div>
    <div class="col-6 text-end">
        <a asp-page="create" class="btn btn-primary" style="width: 225px">
            <i class="bi bi-plus-circle">  Add a New Book Type</i>
        </a>
        
    </div>
</div>

<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
    <tr>
        <th>ID</th>
        <th>Type</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var obj in Model.BookTypes)
    {
        <tr>
            <td width="25%">@obj.Id</td>
            <td width="25%">@obj.Name</td>
            <td width="25%">
                <div class="w-25 btn-group" role="group">
                    <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil"></i></a>
                    <a asp-page="Delete" asp-route-id="@obj.Id"class="btn btn-danger mx-2"><i class="bi bi-trash"></i></a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>