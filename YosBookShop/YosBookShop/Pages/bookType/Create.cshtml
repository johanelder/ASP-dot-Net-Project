@page
@model YosBookShop.Pages.bookType.CreateModel
@{
}
 @if (TempData["success"] != null)
    {
        <script src="/lib/jquery/dist/jquery.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
        <script type="taxt/javascript">toastr.success('Bingo', 'JAC'</script>
    }
}
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add New Book Type</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="@Model.BookType.Name" class="form-control">Type</label>
            <input asp-for="@Model.BookType.Name" class="form-control"/>
            <span asp-validation-for="@Model.BookType.Name"></span>
        </div>
      
        <button type="submit" class="btn btn-primary" style="width:150px">Add</button>
        <a asp-page="Index" class="btn btn-secondary" style="width: 120px">Back to List</a>
    </div>
</form>
            
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}